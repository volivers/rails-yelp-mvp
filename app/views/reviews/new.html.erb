  
<h1>Add review</h1>

<% if @review.errors.any? %>
  <div class="alert alert-danger">
    <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    <ul>
  </div>
<% end %>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-inputs">
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit %>
  </div>
<% end %>